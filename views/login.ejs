<%include partials/header%>

<div class="container">
    <div class="row">
            <h1 style="text-align: center;color: white; text-shadow: 3px 3px 5px black;">Welcome to Project Management</h1>

            <div style="width:30%; margin:20px auto;">
                <form action="/check" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name = "username" placeholder="USERNAME">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="PASSWORD">
                    </div>
                    <div class="form-group">
                        <select class="form-control" type="text" name="applicant">
                            <option value="" disabled="disabled" selected="selected">APPLICANT</option>
                            <option value="PROJECT GROUP HEAD">PROJECT GROUP HEAD</option>
                            <option value="PROJECT GUIDE">PROJECT GUIDE</option>
                        </select>
                    </div>
                    <div class="form-group" >
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                    
                </form>
                <div class="form-group" >
                    <button class="btn btn-lg btn-primary btn-block">
                        <a href="/decide" style="color: aliceblue ;">New User</a>
                    </button>
                </div>
            </div>
            
    </div>
</div>
        
